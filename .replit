modules = ["python-3.12", "bash"]

[nix]
channel = "stable-25_05"

[packager]
# This makes Replit automatically install requirements.txt
manager = "pip"
requirementsPath = "requirements.txt"

# Run button — no pip install here, just runs your app
run = "python main.py"

[[ports]]
localPort = 8000
externalPort = 80

[deployment]
# Deployment command — also just runs your app
run = ["sh", "-c", "python main.py"]

[workflows]
runButton = "Run Battlesnake"

[[workflows.workflow]]
name = "Run Battlesnake"
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pip install -r requirements.txt"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
